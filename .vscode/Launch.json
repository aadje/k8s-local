{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Django test localhost 8000",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/hello_django",
            "program": "manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Django test http",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/hello_django",
            "program": "manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Flask test localhost 5000",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/hello_app",
            "env": {
                "FLASK_APP": "webapp",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": false,
            "justMyCode": true
        },
        {
            "name": "Flask test https",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/hello_app",
            "env": {
                "FLASK_APP": "webapp",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger", 
                "--host", "test-flask.k8slocal.com",
                "--port", "443",
                "--cert", "${workspaceFolder}/.venv/tls.crt",
                "--key", "${workspaceFolder}/.venv/tls.key"
            ],
            "jinja": false,
            "justMyCode": true
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        }
    ]
}