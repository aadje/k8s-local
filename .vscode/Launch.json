{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "1.0.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "ASP NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/hello_asp/bin/Debug/net7.0/hello_asp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/hello_asp",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/hello_asp/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Django test localhost 8000",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/hello_django",
            "program": "manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            // python -m manage runserver_plus --cert-file ../.venv/tls.crt --key-file ../.venv/tls.key test-django.k8slocal.com:443
            "name": "Django test https",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/hello_django",
            "program": "manage.py",
            "args": [
                "runserver_plus", "--cert-file", "../.venv/tls.crt", "--key-file", "../.venv/tls.key", "test-django.k8slocal.com:443"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Flask test localhost 5000",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/hello_app",
            "env": {
                "FLASK_APP": "webapp",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": false,
            "justMyCode": true
        },
        {
            "name": "Flask test https",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/hello_app",
            "env": {
                "FLASK_APP": "webapp",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger", 
                "--host", "test-flask.k8slocal.com",
                "--port", "443",
                "--cert", "${workspaceFolder}/.venv/tls.crt",
                "--key", "${workspaceFolder}/.venv/tls.key"
            ],
            "jinja": false,
            "justMyCode": true
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        }
    ]
}