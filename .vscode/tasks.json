{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "nerd build",
            "type": "shell",
            "command": "nerdctl",
            "args": [
                "build",
                "-t",
                "test-flask:latest",
                "."
            ],
            "options": {
                "env": {}
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "nerd build run debug",
            "type": "shell",
            "dependsOn": [
                "nerd-build"
            ],
            "options": {
                "env": {
                    "FLASK_APP": "hello_app\\__init__.py"
                }
            },
            "command": "nerdctl",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host",
                "0.0.0.0",
                "--port",
                "5000"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}